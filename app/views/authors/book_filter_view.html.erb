<div id="filter3" style="display: none;"><%= render 'book_filter_table', title: 'Filter where authors id is more than 20', data: @author_id_filter if @author_id_filter.length > 0 %></div>

<div id="filter4" style="display: none;"><%= render 'book_filter_table', title: 'Filter where author has addresses', data: @author_address_filter if @author_address_filter.length > 0 %> %></div>

<div id="filter5" style="display: none;"><%= render 'book_filter_table', title: 'Filter where authors zip_code is not null', data: @zip_code_exist if @zip_code_exist.length > 0 %></div>

<div id="filter6" style="display: none;"><%= render 'book_filter_table', title: 'Filter where published date is more than 2012', data: @published_at_filter if @published_at_filter.length > 0 %></div>

