<div id="filter11" style="display: none;"><%= render 'users_form', title: 'all users who gave at least one feedback', data: @feedbackers if @feedbackers.length > 0 %></div>

<div id="filter12" style="display: none;"><%= render 'users_form', title: 'user with max number of feedbacks', data: @user if @user.length > 0 %></div>

<script>
    links = document.getElementsByClassName('filter');
    for (var i = 0; i < links.length; i++) {
        links[i].addEventListener('click',function(e){
            element = document.getElementById(e.target.innerHTML);
            e.target.classList.toggle('active');
            element.style.display === 'none' ? element.style.display = 'block' :  element.style.display = 'none'
        });
    }
</script>

<style>
  .active {
    background-color: #4CAF50;
  }
</style>