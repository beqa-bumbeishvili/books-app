<h1>Editing feedback</h1>

<%= render 'form', author: @feedback %>


<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th>Comment</th>
    <th>Score</th>
    <th>Feedbacker</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @feedback.each do |feedback| %>
      <tr>
        <td><%= feedback.comment %></td>
        <td><%= feedback.score %></td>
        <td><%= feedback.feedbacker %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
